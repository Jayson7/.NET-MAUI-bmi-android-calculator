<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="calculators.MainPage"
             BackgroundColor="#000000"
             >

  <VerticalStackLayout VerticalOptions="Center" Margin="20,0,20,0">
  <Label HorizontalTextAlignment="Center" Text="Get BMI Result" TextColor="#fff" Margin="0,0,0,40" FontAttributes="Bold"
  FontSize="35"
    />
  <Entry
  x:Name="Weight"
  Keyboard='Numeric'
  
   BackgroundColor="#000029" Margin="0,10,0,10" Placeholder="Weight in kgs" PlaceholderColor="#f7f7ff" TextColor="#fff" />
<Entry
  x:Name="Height"
Keyboard='Numeric'
 BackgroundColor="#000029" Margin="0,10,0,10" Placeholder="Height in meters" PlaceholderColor="#f7f7ff" TextColor="#fff"/>
 
 <Entry
  x:Name="BMI" 
IsEnabled="False"
 
  BackgroundColor="#000019" Margin="0,10,0,30" Placeholder="" HorizontalTextAlignment="Center" PlaceholderColor="#f7f7ff" TextColor="#fff" />
 


  <Button Text="CALCULATE" FontAttributes="Bold" TextColor="gold" Clicked="Button_Clicked" />
  

   </VerticalStackLayout>

</ContentPage>
